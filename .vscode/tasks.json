{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe сборка активного файла",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-Werror",
                "-Wextra",
                "-Waddress",
                "-Warray-bounds", 
                "-Wbuiltin-macro-redefined",
                "-Wswitch",
                "-Wunreachable-code",
                "-Wno-missing-field-initializers",
                "-pedantic",
                "-pedantic-errors",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "компилятор: C:\\MinGW\\bin\\gcc.exe"
        }
    ]
}